<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="STAR.NewTripPage"
             Title="Create New Trip"
             BackgroundColor="{StaticResource BackgroundColor}">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <!-- Pickup address Entry -->
                <Frame  Style="{StaticResource EntryFrame}"     Margin="5,20,5,10">
                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label  Grid.Row="0" Style="{StaticResource EntryLabel}"
                                Text="Where are you?"/>
                        
                        <Entry Grid.Row="1" 
                               Placeholder="Enter your current location" 
                               HorizontalTextAlignment="Center"/>
                    </Grid>
                </Frame>
                
                <!-- dropoff address Entry -->
                <Frame  Style="{StaticResource EntryFrame}">
                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Style="{StaticResource EntryLabel}"
                           Text="Where are you headed?"/>

                        <Entry Grid.Row="1" 
                               Placeholder="Enter destination address" 
                               HorizontalTextAlignment="Center"/>
                    </Grid>
                </Frame>
                
                <!-- Appointment Time -->
                <Frame  Style="{StaticResource EntryFrame}">
                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Style="{StaticResource EntryLabel}"
                           Text="When do you want to go?"/>

                        <Label Grid.Row="1"                 HorizontalOptions="StartAndExpand"
                               FontSize="16"                Style="{StaticResource EntryLabel}"
                               Text="Date:"/>
                        <DatePicker Grid.Row="1"            HorizontalOptions="CenterAndExpand"
                                    Format="D"              TextColor="#0073e6"
                                    FontAttributes="Bold"   TranslationX="15"/>

                        <Label Grid.Row="2"                 HorizontalOptions="StartAndExpand"
                               Text="Time:"            Style="{StaticResource EntryLabel}"
                               FontSize="16"/>
                        <TimePicker Grid.Row="2"            x:Name="pickupTime"     
                                    Time="12:00"            HorizontalOptions="CenterAndExpand"
                                    Format="T"              TextColor="#0073e6"
                                    FontAttributes="Bold"   TranslationX="15"/>

                    </Grid>
                </Frame>

                <Button BackgroundColor="DarkGreen" 
                        Text="Confirm"      TextColor="White" FontAttributes="Bold"
                        CornerRadius="20"   Margin="50, 20,30, 50"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>