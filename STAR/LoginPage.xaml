<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="STAR.LoginPage">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">

            <Frame  Style="{StaticResource EntryFrame}" Margin="5,0,5,0">
                <Entry  x:Name="LOGIN_STARID"
                        IsTextPredictionEnabled="True"
                        HorizontalTextAlignment="Center"
                        Margin="10"
                        Placeholder="STAR ID"
                        Text="{Binding LoginSTARID}"/>
            </Frame>

            <Frame  Style="{StaticResource EntryFrame}" Margin="5,0,5,0">
                <Entry  x:Name="LOGIN_LASTNAME"
                        IsTextPredictionEnabled="True"
                        HorizontalTextAlignment="Center"
                        Margin="10"
                        Placeholder="Last Name"
                        Text="{Binding LoginLastName}"/>
            </Frame>

            <Frame  Style="{StaticResource EntryFrame}" Margin="5,0,5,0">
                <Entry  x:Name="LOGIN_DOB"
                        IsTextPredictionEnabled="True"
                        HorizontalTextAlignment="Center"
                        Margin="10"
                        Placeholder="Last Name"
                        Keyboard="Numeric"
                        Text="{Binding LoginDOB}"/>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>